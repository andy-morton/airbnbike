<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        <%= simple_form_for @bike do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :location %>
          <%= f.input :price %>
          <%# <%= f.input :photos, as: :file, input_html: { multiple: true } %> %>
