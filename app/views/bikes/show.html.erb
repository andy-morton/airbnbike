<div class="container pt-3">
  <div class="container-fluid pt-3">
    <%= render "shared/carousel", locals: {bike: @bike} %>

<h1 class="py-4"><%= @bike.name %></h1>
  <p><%= @bike.description %></p>

  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4 pb-5">
          <h2>Book this bike</h2>
            <%= simple_form_for [ @bike, @booking ] do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {id: "range_start"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {id: "range_end"} %>
            <%= f.button :submit, class: "btn-flat" %>
            <% end %>
      </div>
    </div>
  </div>
</div>
</div>
